{
    "name": "clementdecou/simply",
    "description": "The boilerplate for WordPress project with Simply Framework",
    "type": "project",
    "license": "MIT",
    "homepage": "https://amorfx.github.io/simply-documentation/",
    "authors": [
        {
            "name": "Clément Décou",
            "homepage": "https://github.com/Amorfx"
        }
    ],
    "keywords": [
        "simply", "composer", "wordpress", "wp", "wp-config"
    ],
    "require": {
        "johnpbloch/wordpress-core": "^5.9",
        "johnpbloch/wordpress-core-installer": "^2.0",
        "composer/installers": "^2.0",
        "symfony/dotenv": "^6.0",
        "clementdecou/simply-framework": "^0.2",
        "clementdecou/simply-maker": "^0.2"
    },
    "extra": {
        "installer-paths": {
            "wordpress/wp-content/mu-plugins/{$name}": ["clementdecou/simply-framework", "clementdecou/simply-mvc"]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "mv load.php wordpress/wp-content/mu-plugins/",
            "mv wp-config.php wordpress/",
            "mv .env.example wordpress/.env",
            "mv bin wordpress/",
            "rm wordpress/wp-config-sample.php"
        ]
    }
}
